<div style="float: left; margin: 30px 30px;">

  <h1><%= @user.name %></h1>
  <p><%= @user.email %></p>
  <p><%= @user.mobile %></p>

  <h1>
    <%= button_to 'Delete this user', user_path(@user), class: "btn btn-outline-danger btn-sm", method: :delete %>
  </h1>

  <a href="<%= users_path %>">
    <input class="btn btn-success btn-sm" type="button" value="Back to Home">
  </a>
</div>

<div style="margin: 30px 30px;">
  <h2>Add a comment:</h2>
  <%= render 'comments/comment_form' %>
</div>


